<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Suicide Detection System</title>
        <!-- Bootstrap 5 CSS -->
        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" 
        rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" 
        crossorigin="anonymous">

        <!-- Bootstrap 5 JS -->
        <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Suicide Detection System</a>
              <div class="d-flex">
                <div class="navbar-nav">
                    <a class="btn btn-lg btn-success"  onclick="showCreateModal()">Create Tweet</a>
                </div>
              </div>
            </div>
          </nav>


    </head>
    <body>
        <!-- Modal -->
        <div id="modalWrap">
            <div class="modal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Create a Tweet</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="http://127.0.0.1:5000/" method="POST">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="tweet" class="col-form-label">Enter a tweet:</label><br>
                                    <textarea type="text" name="tweet" rows="4" cols="50" class="form-control" placeholder="What's happenning?"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Predict</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
        <!-- /.modal -->
        <!--list container-->
        <div class="container mt-3">
        <div role="tabpanel">
            <!-- List group -->
            <div class="list-group justify-content-center flex-row mb-2" id="myList" role="tablist">
                    <a class="list-group-item list-group-item-action active" data-bs-toggle="list" href="#pending" role="tab">Pending Review</a>

                    <a class="list-group-item list-group-item-action" data-bs-toggle="list" href="#reviewed" role="tab">Reviewed</a>
            </div>
         </div> 
            <!-- Tab panes -->
            <div class="tab-content row">
                <div class="tab-pane active" id="pending" role="tabpanel">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">No</th>
                            <th scope="col">Content</th>
                            <th scope="col">Author</th>
                            <th scope="col">Date & Time of Tweet</th>
                            <th scope="col">Location</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                           {% if all_tweets %}
                           {% for tweet in all_tweets  %}
                           {% if tweet.action==-1 and tweet.risk_level==2 %}
                          <tr>
                            
                                <th scope="row">{{ loop.index }}</th>
                                <td> {{ tweet.content }}</li>
                                <td> {{ tweet.author }}</li>
                                <td> {{ tweet.date_time }}</li>
                                <td> {{ tweet.location }}</li>
                                <td> <a class="btn btn-lg btn-success"  onclick="showUpdateModal()">Select Action</a></li>
                             
                          </tr>
                        <!-- Modal -->
                        <div id="updateModal">
                            <div class="modal" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Update Action</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form action="{{url_for('set_action', id=tweet.id)}}" method="PUT">
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <h3>{{ tweet.content }}</h3>
                                                    <label for="tweet" class="col-form-label">Action:</label><br>
                                                    <select class="form-select" aria-label="Default select example">
                                                        <option selected>Select an action</option>
                                                        <option name="action" value="0">Safe to Ignore</option>
                                                        <option name="action" value="1">Alert the Authorities</option>
                                                        </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Submit Action</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>  
                        <!-- /.modal -->
                          {% endif %}
                          {% endfor %}
                          {% endif %}
                        </tbody>
                      </table>
                </div>
              <div class="tab-pane" id="reviewed" role="tabpanel">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">No</th>
                        <th scope="col">Content</th>
                        <th scope="col">Author</th>
                        <th scope="col">Date & Time of Tweet</th>
                        <th scope="col">Location</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                       {% if all_tweets %}
                       {% for tweet in all_tweets  %}
                      <tr>
                        
                            <th scope="row">{{ loop.index }}</th>
                            <td> {{ tweet.content }}</li>
                            <td> {{ tweet.author }}</li>
                            <td> {{ tweet.date_time }}</li>
                            <td> {{ tweet.location }}</li>
                            <td> dummy</li>
                         
                      </tr>

                      {% endfor %}
                      {% endif %}
                    </tbody>
                  </table>
              </div>
            </div>

        </div>
          <!--list container-->
        <div class="container mt-3">
            {% if result %}
            <h4>The result is: <span class="text-danger">{{ result }}</span> </h4>
            {% endif %}
        </div>

    <script>
        const showCreateModal=()=>{
            modalWrap=document.getElementById('modalWrap')
            var modal=new bootstrap.Modal(modalWrap.querySelector('.modal'));
        modal.show();
        }

        const showUpdateModal=()=>{
            updateModal=document.getElementById('updateModal')
            var modal=new bootstrap.Modal(updateModal.querySelector('.modal'));
        modal.show();
        }

    </script>
    </body>
</html>