<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Suicide Detection System</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
        <!-- Bootstrap 5 CSS -->
        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" 
        rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" 
        crossorigin="anonymous">

        <!-- Bootstrap 5 JS -->
        <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Suicide Detection System</a>
              <div class="d-flex">
                <div class="navbar-nav">
                    <a class="btn btn-lg btn-success"  onclick="showCreateModal()">Create Tweet</a>
                </div>
              </div>
            </div>
          </nav>


    </head>
    <body>
        <!-- Modal -->
        <div id="modalWrap">
            <div class="modal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Create a Tweet</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="http://127.0.0.1:5000/" method="POST">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="tweet" class="col-form-label">Enter a tweet:</label><br>
                                    <textarea type="text" name="tweet" rows="4" cols="50" class="form-control" placeholder="What's happenning?"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Predict</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
        <!-- /.modal -->

                <!--list container-->
                <div class="container mt-3">
                <div role="tabpanel">
                    <!-- List group -->
                    <div class="list-group justify-content-center flex-row mb-2" id="myList" role="tablist">
                        
                        <button class="list-group-item list-group-item-action active" data-bs-toggle="list" href="#pending" role="tab" style="outline:none;">
                            Pending Review
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                99+
                                <span class="visually-hidden">unread messages</span>
                              </span>
                        </button>
                            
                            
                            <a class="list-group-item list-group-item-action" data-bs-toggle="list" href="#viewAll" role="tab">View All Tweets</a>
                    </div>
                </div> 
                    <!-- Tab panes -->
                    <div class="tab-content row">
                        <!--Pending Tab-->
                        <div class="tab-pane active" id="pending" role="tabpanel">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Content</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Date & Time of Tweet</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if all_tweets %}
                                {% for tweet in all_tweets  %}
                                {% if tweet.action==-1 and tweet.risk_level==2 %}
                                <tr>
                                    
                                        <th scope="row">{{ loop.index }}</th>
                                        <td> {{ tweet.content }}</li>
                                        <td> {{ tweet.author }}</li>
                                        <td> {{ tweet.date_time }}</li>
                                        <td> {{ tweet.location }}</li>
                                        <td> <a class="btn btn-lg btn-success" data-bs-toggle="modal" data-bs-target="#updateModal{{tweet.id}}">Select Action</a></li>
                                    
                                </tr>
                                <!-- Modal -->
                                {% include 'updateModal.ejs' %}

                                <!-- /.modal -->
                                {% endif %}
                                {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                        
                        <!--All Tweets Tab-->
                        <div class="tab-pane" id="viewAll" role="tabpanel">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Content</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Date & Time of Tweet</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Status/ Selected Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if all_tweets %}
                                {% for tweet in all_tweets  %}
                                
                                <tr>
                                    
                                        <th scope="row">{{ loop.index }}</th>
                                        <td> {{ tweet.content }}</td>
                                        <td> {{ tweet.author }}</td>
                                        <td> {{ tweet.date_time }}</td>
                                        <td> {{ tweet.location }}</td>
                                        <td> 
                                         {% if tweet.action==-1%}
                                         {% if tweet.risk_level==0 %}
                                            No risk detected
                                            {% elif tweet.risk_level==1 %}
                                            Default message sent
                                            {% else %}
                                            Pending Review
                                         {% endif %}
                                         
                                         {% elif tweet.action==0 %}
                                        Safe to Ignore. Default message sent
                                        
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#updateModal{{tweet.id}}">open</a>
                                         {% else %}
                                         Alert the Authorities
                                         <a href="#" data-bs-toggle="modal" data-bs-target="#updateModal{{tweet.id}}">open</a>
                                         
                                          {% endif %}
                                          
                                         
                                        <!-- Modal -->
                                       
                                        
                                       
                                        
                                        {% include 'updateModal.ejs' %}
                                         <!-- /.modal -->
                                        </td>
                                </tr>
                                
                                
                                
                                {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                            

                        </div>
                    </div>

                </div>
                
                {% if showResultModal and tweetID %}
                {% include 'resultModal.ejs' %}
                <script>     
                    resultModal=document.getElementById('resultModal')
                    var modal=new bootstrap.Modal(resultModal.querySelector('.modal'));
                    modal.show();
                </script>
                {% endif %}

                {% if showInfoModal and tweetID %}
                {% include 'infoModal.ejs' %}
                <script>     
                    infoModal=document.getElementById('infoModal')
                    var modal=new bootstrap.Modal(infoModal.querySelector('.modal'));
                    modal.show();
                </script>
                {% endif %}

                
  
    <script>

        const showCreateModal=()=>{
            modalWrap=document.getElementById('modalWrap')
            var modal=new bootstrap.Modal(modalWrap.querySelector('.modal'));
        modal.show();
        }




    </script>


            
    </body>
</html>